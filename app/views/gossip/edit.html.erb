<!DOCTYPE html>
<html>
    <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= stylesheet_link_tag 'application'%> 
    </head>
    <body>
        <main>

            <div class = "wrapper">
              <%= form_with model:@gossip, url:gossip_path(@num), method: :patch, local:true do |form| %>
                <div class = "form-group">
                    <%= label_tag 'title' %>
                    <%= form.text_field :title, class:'form-control'%>
                </div>
                <div class = "form-group">
                    <%= label_tag 'content' %>
                    <%= form.text_field :content, class:'form-control'%>
                </div>
                <%= form.submit "Edit" %>
                <%end%>
            </div>

        </main>
    </body>
</html>