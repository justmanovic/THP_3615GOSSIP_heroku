<h1>Signup</h1>


<%= form_with model:@new_user, url: users_path, method: :post, local:true do |form| %>
  <div class = "form-group">
    <%= label_tag 'Prénom' %>
    <%= form.text_field :first_name, class:'form-control'%>
  </div>
  <div class = "form-group">
    <%= label_tag 'Nom' %>
    <%= form.text_field :last_name, class:'form-control'%>
  </div>
  <div class = "form-group">
    <%= label_tag 'Ville (1: Paris, 2: Lyon, 3: Marseille...)' %>
    <%= form.text_field :city_id, class:'form-control'%>
  </div>
  <div class = "form-group">
    <%= label_tag 'email' %>
    <%= form.text_field :email, class:'form-control'%>
  </div>
  <div class = "form-group">
    <%= label_tag 'password' %>
    <%= form. :password_field, class:'form-control'%>
  </div>
  <%= form.submit "Créer votre compte" %>
  <%end%>
</div>
